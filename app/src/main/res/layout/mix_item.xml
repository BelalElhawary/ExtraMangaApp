<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="160dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:cardCornerRadius="12dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image0_mix"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/image1_mix"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/image2_mix"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/image3_mix"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/image4_mix"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <TextView
            android:id="@+id/name_mix"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textSize="12sp"
            android:text="Action Mix"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_test"
            android:layout_gravity="bottom"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
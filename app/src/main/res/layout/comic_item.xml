<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGround">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/backGround">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp">
                    <ImageView
                        android:id="@+id/image_comic"
                        android:scaleType="fitXY"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:paddingTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_comic"
                        android:text="Comic Name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/comic_name2_text"
                        android:layout_gravity="bottom"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/category_comic"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textColor="@color/comic_category_text"
                        android:layout_gravity="bottom"
                        android:paddingLeft="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingLeft="18dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_baseline_local_fire_department_24" />
                        <TextView
                            android:id="@+id/trend_comic"
                            android:text="651"
                            android:textStyle="bold"
                            android:textColor="@color/love"
                            android:layout_gravity="bottom"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>